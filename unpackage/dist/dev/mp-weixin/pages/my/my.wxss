.Avator {
  width: 30%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.set-line {
  display: flex;
  flex-direction: row;
  height: 6vh;
  background-color: white;
  margin-top: 1.5vh;
}
.set-line-hover {
  background-color: aliceblue;
}
.icons {
  width: 10%;
  margin-left: 2.5%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.line-text {
  line-height: 6vh;
  width: 70%;
  margin-left: 2.5%;
  font-size: 2vh;
}
.line-image {
  width: 20%;
  margin-right: 5%;
  height: 6vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
